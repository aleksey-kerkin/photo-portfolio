---
import Link from './Link.astro';
---

<header
  class="container flex place-content-between place-items-center px-8 py-12 max-sm:px-4 max-sm:py-10">
  <a href="/">
    <img
      class="size-12 rounded-full object-cover"
      src="/assets/img/avatar.jpg"
      alt="Aleksey Kerkin's avatar"
    />
  </a>
  <nav class="flex place-content-center gap-4 text-xl">
    <Link
      href="/"
      linkText="Chronicles"
    />
    <Link
      href="/about/"
      linkText="About"
    />
  </nav>
</header>
